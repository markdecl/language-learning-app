<div class="row d-flex justify-content-center align-items-center">
    <div class="card shadow-2-strong">
      <div class="card-body p-5 text-center">

        <h3 class="mb-5">Log in to Verble</h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <label class="form-label" for="typeEmailX-2">Email</label>
          <div class="field form-outline mb-4">
            <%# <input type="email" id="typeEmailX-2" class="form-control form-control-lg" /> %>
            <%#= f.label :email, class: "form-control form-control-lg" %><%# br /> %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <label class="form-label" for="typeEmailX-2">Password</label>
          <div class="field form-outline mb-4">
            <%#= f.label :password, class: "form-control form-control-lg" %><%# br /> %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <br>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
          </div>

          <hr class="my-4">
          <%# <button class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;" type="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>
          <button class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;" type="submit"><i class="fab fa-facebook-f me-2"></i>Sign in with facebook</button> %>
          <%# <br> %>
          <%= render "devise/shared/links" %>


        <% end %>


      </div>
    </div>
  </div>
</div>
